<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_set_sale_template_form" model="ir.ui.view">
      <field name="name">view.set_sale_template.form</field>
      <field name="model">set.sale.template</field>
      <field name="arch" type="xml">
        <form string="Set Template">
            <group name="main">
              <field name="template_id" />
            </group>
            <footer>
                <button string="Set" name="set_template" type="object" class="btn btn-primary btn-sm o_list_button_add"/>
                or
                <button string="Cancel" class="btn-default" special="cancel"/>
            </footer>
        </form>
      </field>
    </record>

    <record id="set_sale_template_action" model="ir.actions.act_window">
      <field name="name">Set Template</field>
      <field name="res_model">set.sale.template</field>
      <field name="view_mode">form</field>
      <field name="view_type">form</field>
      <field name="target">new</field>
    </record>

  </data>
</openerp>
