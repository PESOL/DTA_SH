<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">view.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='sale.view_order_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='layout_category_id']" position="attributes">
                <attribute name="domain">[('sale_order_id','=',parent.id)]</attribute>
                <attribute name="options">{'no_create':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='layout_category_id']" position="attributes">
                <attribute name="domain">[('sale_order_id','=',parent.id)]</attribute>
                <attribute name="options">{'no_create':True}</attribute>
            </xpath>
            <!-- <xpath expr="//button[@name='action_done']" position="before">
                <button string="Set Template"
                name="set_template"
                type="object"
                context="{}" />
            </xpath> -->
            <xpath expr="//notebook" position="inside">
                <page string="Sections">
                    <form>
                        <field name="sale_layout_category_ids" mode="tree,kanban" on_change="1"/>
                    </form>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
