<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_quote_form" model="ir.ui.view">
        <field name="name">view.sale.order.quote.form</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='website_quote.sale_order_form_quote'/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='template_id']" position="before">
              <div colspan="2">
                <button string="Set Template" name="set_template" type="object"/>
              </div>
            </xpath>
            <xpath expr="//field[@name='template_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">view.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='sale.view_order_form'/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sections">
                    <field name="sale_layout_category_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
