<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_layout_quote_template_form" model="ir.ui.view">
        <field name="name">view.sale.layout.quote.template.form</field>
        <field name="model">sale.quote.template</field>
        <field name='inherit_id' ref='website_quote.view_sale_quote_template_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quote_line']/form/group/group/field[@name='layout_category_id']" position="attributes">
                <attribute name="domain">[('quote_id','=',parent.id)]</attribute>
                <attribute name="options">{'no_create':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='quote_line']/tree/field[@name='layout_category_id']" position="attributes">
                <attribute name="domain">[('quote_id','=',parent.id)]</attribute>
                <attribute name="options">{'no_create':True}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Sections">
                    <tree>
                        <field name="quote_layout_category_ids" mode="tree,kanban" on_change="1"/>
                    </tree>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
