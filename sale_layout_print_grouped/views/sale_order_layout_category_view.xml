<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_sale_order_layout_category_form" model="ir.ui.view">
            <field name="name">view.sale_order_layout_category.form</field>
            <field name="model">sale.order.layout_category</field>
            <field name="arch" type="xml">
                <form string="Section">
                        <group name="main">
                            <field name="quote_category_id"/>
                            <field name="name"/>
                            <field name="sequence"/>
                            <group>
                                <field name="subtotal"/>
                                <field name="pagebreak"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="print_grouped"/>
                            </group>
                        </group>
                        <group name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                </form>
            </field>
        </record>

        <record id="view_sale_order_layout_category_tree" model="ir.ui.view">
            <field name="name">view.sale_order_layout_category.tree</field>
            <field name="model">sale.order.layout_category</field>
            <field name="arch" type="xml">
                <tree string="Section">
                    <field name="quote_category_id"/>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="subtotal"/>
                    <field name="pagebreak"/>
                    <field name="qty"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
