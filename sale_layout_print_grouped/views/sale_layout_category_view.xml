<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_layout_category_form" model="ir.ui.view">
        <field name="name">view.sale.layout.category.form</field>
        <field name="model">sale.layout_category</field>
        <field name='inherit_id' ref='sale.report_configuration_form_view'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pagebreak']" position="after">
                <field name="print_grouped" />
            </xpath>
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="description" />
            </xpath>
            <xpath expr="//field[@name='sequence']" position="before">
                <field name="sale_order_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='sequence']" position="before">
                <field name="qty"/>
            </xpath>
        </field>
    </record>
</odoo>
