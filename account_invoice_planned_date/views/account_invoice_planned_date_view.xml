<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_planned_date_form" model="ir.ui.view">
        <field name="name">view.account.invoice.planned.date.form</field>
        <field name="model">account.invoice</field>
        <field name='inherit_id' ref='account.invoice_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_invoice']" position="after">
                <field name="planned_date"/>
                <field name="your_reference" />
                <field name="suppl_code" />
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_planned_date_search" model="ir.ui.view">
        <field name="name">view.account.invoice.planned.date.search</field>
        <field name="model">account.invoice</field>
        <field name='inherit_id' ref='account.view_account_invoice_filter'/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='number']" position="after">
              <field name="planned_date"/>
              <filter name="filer planned date" string="Filter Planned Date" domain="[('date','&lt;', ((context_today()).strftime('%Y-%m-%d')))]"/>
          </xpath>
        </field>
    </record>
</odoo>
