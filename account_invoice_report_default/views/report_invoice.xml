<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document">
      <t t-call="base_layout_report_dta.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"></t>
        <div class="page">
          <div class="row">
            <div class="col-xs-12">
              <style>
                .table tr td,
                .table.no-border tr th {
                  border: none !important;
                }

              </style>
              <table class="table table-condensed no-border">
                <tbody>
                  <tr>
                    <td>
                      <span>Your PO:</span>
                    </td>
                    <td></td>
                    <td>
                      <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True, "no_marker": True}'></div>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td>
                      <span>Your Refenrence:</span>
                    </td>
                    <td></td>
                    <td>
                      <span t-field="doc.partner_id.vat"/>
                    </td>
                    <td></td>
                  </tr>
                  <tr>
                    <td>
                      <span>Supplier code:</span>
                    </td>
                    <td>
                      <span t-field="doc.partner_id.ref"/>
                    </td>
                    <td>
                      <span>Street:</span>
                    </td>
                    <td>
                      <span t-field="doc.partner_id.street"/>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                    <td>
                      <span>Address:</span>
                    </td>
                    <td>
                      <span t-field="doc.partner_id.zip"/>,
                      <span t-field="doc.partner_id.city"/>,
                      <span t-field="doc.partner_id.country_id"/>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                    <td>
                      <span>Client Code:</span>
                    </td>
                    <td>
                      <span t-field="doc.partner_id.ref"/>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4">
              <span>Invoice:
              </span>
              <span t-if="doc.type == 'out_invoice' and (doc.state == 'open' or doc.state == 'paid')">Invoice</span>
              <span t-if="doc.type == 'out_invoice' and doc.state == 'proforma2'">PRO-FORMA</span>
              <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">Draft Invoice</span>
              <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">Cancelled Invoice</span>
              <span t-if="doc.type == 'out_refund'">Refund</span>
              <span t-if="doc.type == 'in_refund'">Supplier Refund</span>
              <span t-if="doc.type == 'in_invoice'">Supplier Invoice</span>
              <span t-field="doc.number"/>
            </div>
            <div class="col-xs-4">
              <span>Project:
              </span>
              <span t-field="doc.invoice_line_ids[0].name"/>
            </div>
            <div class="col-xs-4">
              <span>Date:
              </span>
              <span t-field="doc.date_invoice"/>
            </div>
          </div>

          <div class="row mt32 mb32">
            <div class="col-xs-2" t-if="doc.name">
              <strong>Description:</strong>
              <p t-field="doc.name"/>
            </div>
            <div class="col-xs-2" t-if="doc.date_invoice">
              <strong>Invoice Date:</strong>
              <p t-field="doc.date_invoice"/>
            </div>
            <div class="col-xs-2" t-if="doc.origin">
              <strong>Source:</strong>
              <p t-field="doc.origin"/>
            </div>
            <div class="col-xs-2" t-if="doc.partner_id.ref">
              <strong>Customer Code:</strong>
              <p t-field="doc.partner_id.ref"/>
            </div>
            <div class="col-xs-2" t-if="doc.reference">
              <strong>Reference:</strong>
              <p t-field="doc.reference"/>
            </div>
          </div>

          <!-- Is there a discount on at least one line? -->
          <t t-set="display_discount" t-value="any([l.discount for l in doc.invoice_line_ids])"/>

          <t t-foreach="doc.invoice_lines_layout()" t-as="page">

              <table class="table table-condensed">
                  <thead>
                      <tr>
                          <th>Description</th>
                          <th class="hidden">Source Document</th>
                          <th class="text-right">Quantity</th>
                          <th class="text-right">Unit Price</th>
                          <th t-if="display_discount" class="text-right">Disc.(%)</th>
                          <th class="text-right">Taxes</th>
                          <th class="text-right">Tax Excluded Price</th>
                      </tr>
                  </thead>
                  <tbody class="invoice_tbody">
                      <t t-foreach="page" t-as="layout_category">
                          <t t-set="category" t-value="layout_category['category']"/>
                          <t groups="sale.group_sale_layout">
                              <tr class="active">
                                  <td style="font-weight: bold; border-bottom: 1px solid black;">
                                      <t t-esc="layout_category['name']"/>
                                  </td>
                                  <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                                      <t t-if="layout_category['print_grouped']" t-esc="category.qty"/>
                                  </td>
                                  <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                                      <t t-set="price" t-value="category.qty and (sum(a.price_subtotal for line in layout_category['lines'] for a in line) / category.qty) or 0"/>
                                      <span t-if="layout_category['print_grouped']" t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                  </td>
                                  <td t-if="display_discount" style="font-weight: bold; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"></td>
                                  <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                                      <span t-if="layout_category['print_grouped']" t-esc="', '.join(map(lambda x: (x.description or x.name), layout_category['tax_id']))"/>
                                  </td>
                                  <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                                      <t t-set="price" t-value="sum(a.price_subtotal for line in layout_category['lines'] for a in line)"/>
                                      <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                  </td>

                              </tr>
                              <tr>
                                  <td colspan="7">
                                      <span t-field="category.description"/>
                                  </td>
                              </tr>
                          </t>

                          <!-- Lines associated -->
                          <t t-if="not layout_category['print_grouped']">
                              <t t-foreach="layout_category['lines']" t-as="l">
                                  <tr>
                                      <td><span t-field="l.name"/></td>
                                      <td class="hidden"><span t-field="l.origin"/></td>
                                      <td class="text-right">
                                          <span t-field="l.quantity"/>
                                          <span t-field="l.uom_id" groups="product.group_uom"/>
                                      </td>
                                      <td class="text-right">
                                          <span t-field="l.price_unit"/>
                                      </td>
                                      <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                          <span t-field="l.discount"/>
                                      </td>
                                      <td class="text-right">
                                          <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                      </td>
                                      <td class="text-right">
                                          <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                      </td>
                                  </tr>
                              </t>
                          </t>

                      </t>
                      <!--tr t-foreach="o.invoice_line_ids" t-as="l">
                          <td><span t-field="l.name"/></td>
                          <td class="hidden"><span t-field="l.origin"/></td>
                          <td class="text-right">
                              <span t-field="l.quantity"/>
                              <span t-field="l.uom_id" groups="product.group_uom"/>
                          </td>
                          <td class="text-right">
                              <span t-field="l.price_unit"/>
                          </td>
                          <td t-if="display_discount" class="text-right">
                              <span t-field="l.discount"/>
                          </td>
                          <td class="text-right">
                              <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                          </td>
                          <td class="text-right">
                              <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                          </td>
                      </tr-->
                  </tbody>
              </table>

              <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                  <p style="page-break-before:always;"></p>
              </t>
          </t>
          <div class="row">
            <div class="col-xs-4 pull-right">
              <table class="table table-condensed">
                <!--tr class="border-black">
                  <td>
                    <strong>SubTotal w/o Discount</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.subtotal_wo_discount" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                  </td>
                </tr>
                <tr class="border-black">
                  <td>
                    <strong>Discount</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.discount_amount" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                  </td>
                </tr-->
                <tr class="border-black">
                  <td>
                    <strong>Total Without Taxes</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                  </td>
                </tr>
                <tr>
                  <td>Taxes</td>
                  <td class="text-right">
                    <span t-field="doc.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                  </td>
                </tr>
                <tr class="border-black">
                  <td>
                    <strong>Total</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          <div class="row" t-if="doc.tax_line_ids">
            <div class="col-xs-6">
              <table class="table table-condensed">
                <thead>
                  <tr>
                    <th>Tax</th>
                    <th class="text-right">Base</th>
                    <th class="text-right">Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="doc.tax_line_ids" t-as="t">
                    <td><span t-field="t.name"/></td>
                    <td class="text-right">
                      <span t-field="t.base" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                    </td>
                    <td class="text-right">
                      <span t-field="t.amount" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <p t-if="doc.comment">
            <strong>Comment:</strong>
            <span t-field="doc.comment"/>
          </p>
          <p t-if="doc.payment_term_id.note">
            <strong>Payment Term:</strong>
            <span t-field="doc.payment_term_id.note"/>
          </p>
          <div class="row" t-if="doc.move_id">
            <div class="col-xs-6">
              <table class="table table-condensed">
                <thead>
                  <tr>
                    <th>Date due</th>
                    <th class="text-right">Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="[ x for x in doc.move_id.line_id if x.debit > 0 ]" t-as="v">
                    <td><span t-field="v.date_maturity"/></td>
                    <td class="text-right">
                      <span t-field="v.debit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.currency_id&quot;}"/>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <p t-if="doc.fiscal_position_id.note">
            <strong>Fiscal Position Remark:</strong>
            <span t-field="doc.fiscal_position_id.note"/>
          </p>
        </div>
      </t>
    </template>


    <template id="report_invoice_default" inherit_id="account.report_invoice">
      <xpath expr="t[@t-call='report.html_container']" position="replace">
        <t t-call="report.html_container">
          <t t-foreach="docs" t-as="doc">
            <t t-call="account_invoice_report_default.report_invoice_document" t-lang="doc.partner_id.lang"/>
          </t>
        </t>
      </xpath>
    </template>

