<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_saleorder_document">
    <t t-call="base_layout_report_dta.external_layout">
      <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
      <div class="page">
        <div class="oe_structure"></div>
        <div class="row" style="margin-bottom:50px;">
          <style>
            .table tr td,
            .table.no-border tr th {
              border: none !important;
            }

          </style>
          <table class="table table-condensed no-border" style="margin-bottom:50px;">
            <tbody>
              <tr>
                <td>
                  <span style="font-size:20px; font-weight: bold;">Order #
                  </span>
                  <span t-field="doc.name" style="font-size:20px; font-weight: bold;"/>
                </td>
                <td></td>
                <td>
                  <strong>
                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True, "no_marker": True}' style="font-size:20px;"></div>
                  </strong>
                </td>
                <td></td>
              </tr>
              <tr>
                <td>
                  <span style="margin-right:5px;">Date Ordered:</span>
                  <span t-if="doc.date_order" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                </td>
                <td class="text-left"></td>
                <td>
                  <span t-field="doc.partner_id.vat"/>
                </td>
                <td></td>
              </tr>
              <tr>
                <td>
                  <span style="margin-right:5px;">Customer inquiry:</span>
                  <span t-field="doc.partner_id.ref"/>
                </td>
                <td class="text-left"></td>
                <td>
                  <!-- <span>Street:</span> -->
                  <span t-field="doc.partner_id.street"/>
                </td>
                <td></td>
              </tr>
              <tr>
                <td>
                  <span style="margin-right:5px;">Validity Date:</span>
                  <span t-field="doc.validity_date"/>
                </td>
                <td></td>
                <td>
                  <!-- <span>Address:</span> -->
                  <span t-field="doc.partner_id.zip"/>,
                  <span t-field="doc.partner_id.city"/>,
                  <span t-field="doc.partner_id.country_id"/>
                </td>
                <td></td>
              </tr>
              <tr>
                <td></td>
                <td></td>
                <td>
                  <span style="margin-right:5px;">Tel:</span>
                  <span t-field="doc.partner_id.phone"/>
                </td>
                <td></td>
              </tr>
              <tr>
                <td>
                  <span style="margin-right:5px;">Contact:</span>
                  <span t-field="doc.user_id"/>
                </td>
                <td></td>
                <td>
                  <span style="margin-right:5px;">Client Code:</span>
                  <span t-field="doc.partner_id.ref"/>
                </td>
                <td></td>
              </tr>
              <tr>
                <td>
                  <span style="margin-right:5px;">Email | Tel:</span>
                  <span>
                    <span t-field="doc.user_id.login"/>
                    |
                    <span t-field="doc.user_id.phone"/>
                  </span>
                </td>
                <td></td>
                <td>
                  <span style="margin-right:5px;">Att:</span>
                  <span t-field="doc.user_id"/>
                </td>
                <td></td>
              </tr>
            </tbody>
          </table><br/>

          <!-- Is there a discount on at least one line? -->
          <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
          <!-- <t t-set="layout_category" t-value="for layout_category in page"/> -->
          <t t-foreach="doc.order_lines_layout()" t-as="page">
            <table class="table table-condensed">
              <t t-foreach="page" t-as="layout_category">
                <thead>
                  <tr>
                    <t t-if="layout_category['print_grouped']">
                      <th>Pos.</th>
                      <th>Description</th>
                      <th class="text-right">Quantity</th>
                      <th class="text-right">
                        <span>Unit Price</span>
                      </th>
                      <th class="text-right" groups="sale.group_show_tax_id">Taxes</th>
                      <th colspan="2" class="text-right">
                        <span>Total Price</span>
                      </th>
                    </t>
                    <t t-if="not layout_category['print_grouped']">
                      <t t-if="doc.report_type == 'vehicle'">
                        <th>Pos.</th>
                        <th>Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">
                          <span>Unit Price</span>
                        </th>
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                        <th class="text-right" groups="sale.group_show_tax_id">Taxes</th>
                        <th class="text-right">
                          <span>Total Price</span>
                        </th>
                      </t>
                      <t t-if="doc.report_type == 'refill'">
                        <th>Pos.</th>
                        <th>Default Code</th>
                        <th>Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">
                          <span>Unit Price</span>
                        </th>
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                        <th class="text-right" groups="sale.group_show_tax_id">Taxes</th>
                        <th t-if="doc.limit_date">Limit Date</th>
                        <th class="text-right">
                          <span>Total Price</span>
                        </th>
                      </t>
                      <t t-if="doc.report_type == 'represented'">
                        <th>Pos.</th>
                        <th>Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">
                          <span>Unit Price</span>
                        </th>
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                        <th class="text-right" groups="sale.group_show_tax_id">Taxes</th>
                        <th class="text-right">
                          <span>Total Price</span>
                        </th>
                      </t>
                    </t>
                  </tr>
                </thead>
                <t t-if="not layout_category['pagebreak'] and layout_category['print_grouped']">
                  <tbody class="sale_tbody">
                    <t t-set="category" t-value="layout_category['category']"/>
                    <t groups="sale.group_sale_layout">
                      <t t-if="layout_category['print_grouped']">
                        <tr class="active">
                          <!-- <td style="font-weight: bold; border-bottom: 1px solid black;">
                            <t t-esc="position" t-value="line.position for line in doc.order_line"></t>
                          </td> -->
                          <td style="font-weight: bold; border-bottom: 1px solid black;">
                            <t t-esc="category.sequence"></t>
                          </td>
                          <td style="font-weight: bold; border-bottom: 1px solid black;">
                            <t t-esc="layout_category['name']"></t>
                          </td>
                          <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                            <t t-if="layout_category['print_grouped']" t-esc="int(category.qty)"></t>
                          </td>
                          <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                            <t t-set="price" t-value="category.qty and (sum(a.price_subtotal for line in layout_category['lines'] for a in line) / category.qty) or 0"></t>
                            <span t-if="layout_category['print_grouped']" t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                          </td>
                          <!-- <td t-if="display_discount" style="font-weight: bold; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"></td> -->
                          <!-- <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                            <span t-if="layout_category['print_grouped']" t-esc="', '.join(map(lambda x: (x.description or x.name), layout_category['tax_id']))"/>
                          </td> -->
                          <td colspan="2" style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_subtotal">
                            <t t-set="price" t-value="sum(a.price_subtotal for line in layout_category['lines'] for a in line)"></t>
                            <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                          </td>
                          <td colspan="2" style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_total">
                            <t t-set="price" t-value="sum(a.price_total for line in layout_category['lines'] for a in line)"></t>
                            <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                          </td>
                        </tr>
                      </t>
                      <t t-if="category.description">
                        <tr>
                          <td colspan="6">
                            <span t-field="category.description"/>
                          </td>
                        </tr>
                      </t>
                    </t>
                  </tbody>
                </t>
              </t>
              <tbody class="sale_tbody">
                <t t-foreach="page" t-as="layout_category">
                  <t t-set="category" t-value="layout_category['category']"/>
                  <t groups="sale.group_sale_layout">
                    <t t-if="layout_category['print_grouped'] and layout_category['pagebreak']">
                      <tr class="active">
                        <!-- <td style="font-weight: bold; border-bottom: 1px solid black;">
                          <t t-esc="position" t-value="line.position for line in doc.order_line"></t>
                        </td> -->
                        <td style="font-weight: bold; border-bottom: 1px solid black;">
                          <t t-esc="layout_category['name']"></t>
                        </td>
                        <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                          <t t-if="layout_category['print_grouped']" t-esc="category.qty"></t>
                        </td>
                        <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                          <t t-set="price" t-value="category.qty and (sum(a.price_subtotal for line in layout_category['lines'] for a in line) / category.qty) or 0"></t>
                          <span t-if="layout_category['print_grouped']" t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                        </td>
                        <!-- <td t-if="display_discount" style="font-weight: bold; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"></td> -->
                        <!-- <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                          <span t-if="layout_category['print_grouped']" t-esc="', '.join(map(lambda x: (x.description or x.name), layout_category['tax_id']))"/>
                        </td> -->
                        <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_subtotal">
                          <t t-set="price" t-value="sum(a.price_subtotal for line in layout_category['lines'] for a in line)"></t>
                          <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                        </td>
                        <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_total">
                          <t t-set="price" t-value="sum(a.price_total for line in layout_category['lines'] for a in line)"></t>
                          <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                        </td>
                      </tr>
                      <tr t-if="category.description">
                        <td colspan="6">
                          <span t-field="category.description"/>
                        </td>
                      </tr>
                    </t>
                  </t>
                  <!-- </t> -->

                  <!-- Lines associated -->
                  <t t-if="not layout_category['print_grouped']">
                    <t t-foreach="layout_category['lines']" t-as="l">
                      <t t-if="doc.report_type == 'vehicle'">
                        <tr>
                          <td><span t-field="l.position"/></td>
                          <td><span t-field="l.name"/></td>
                          <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                          </td>
                          <td class="text-right">
                            <span t-field="l.price_unit"/>
                          </td>
                          <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            <span t-field="l.discount"/>
                          </td>
                          <!-- <td class="text-right" t-if="l.tax_id">
                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                      </td> -->
                          <td class="text-right" groups="sale.group_show_price_subtotal" t-if="l.price_subtotal">
                            <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                          <td class="text-right" groups="sale.group_show_price_total">
                            <span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                        </tr>
                      </t>
                      <t t-if="doc.report_type == 'refill'">
                        <tr>
                          <td><span t-field="l.position"/></td>
                          <td><span t-field="l.product_id.default_code"/></td>
                          <td><span t-field="l.name"/></td>
                          <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                          </td>
                          <td class="text-right">
                            <span t-field="l.price_unit"/>
                          </td>
                          <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            <span t-field="l.discount"/>
                          </td>
                          <!-- <td class="text-right" t-if="l.tax_id">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                          </td> -->
                          <td class="text-right"><span t-field="doc.limit_date"/></td>
                          <td class="text-right" groups="sale.group_show_price_subtotal" t-if="l.price_subtotal">
                            <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                          <td class="text-right" groups="sale.group_show_price_total">
                            <span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                        </tr>
                      </t>
                      <t t-if="doc.report_type == 'represented'">
                        <tr>
                          <td><span t-field="l.position"/></td>
                          <td><span t-field="l.name"/></td>
                          <td class="text-right">
                            <span t-field="l.product_uom_qty"/>
                          </td>
                          <td class="text-right">
                            <span t-field="l.price_unit"/>
                          </td>
                          <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            <span t-field="l.discount"/>
                          </td>
                          <!-- <td class="text-right" t-if="l.tax_id">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                          </td> -->
                          <td class="text-right" groups="sale.group_show_price_subtotal" t-if="l.price_subtotal">
                            <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                          <td class="text-right" groups="sale.group_show_price_total">
                            <span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                          </td>
                        </tr>
                      </t>
                    </t>
                  </t>
                </t>
              </tbody>
            </table>

            <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
              <p style="page-break-before:always;"></p>
            </t>
          </t>

          <div class="row" name="total">
            <div class="col-xs-4 pull-right">
              <table class="table table-condensed">
                <tr class="border-black">
                  <td>
                    <strong>Total Without Taxes</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                  </td>
                </tr>
                <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                  <tr>
                    <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                    <td class="text-right">
                      <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                    </td>
                  </tr>
                </t>
                <tr class="border-black">
                  <td>
                    <strong>Total</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                  </td>
                </tr>
              </table>
            </div>
          </div>
          <div class="row" style="margin-top:30px;">
            <div class="col-xs-12">
              <t t-if="doc.report_type == 'vehicle'">
                <p id="limit_date" t-if="doc.limit_date">
                  <strong>Limit Date:</strong>
                  <span t-field="doc.limit_date"/>
                </p>
                <p id="payment_term_id" t-if="doc.payment_term_id">
                  <!-- <strong>Payment Term:</strong> -->
                  <span t-field="doc.payment_term_id.name"/>
                </p>
                <p id="incoterm" t-if="doc.incoterm">
                  <strong>Incoterm:</strong>
                  <span t-field="doc.incoterm"/>
                </p>
                <p id="invoicing_method_id" t-if="doc.invoicing_method_id">
                  <!-- <strong>Invoicing Method:</strong> -->
                  <span t-field="doc.invoicing_method_id.name"/>
                </p>
                <p id="payment_mode_id" t-if="doc.payment_mode_id">
                  <!-- <strong>Payment Mode:</strong> -->
                  <span t-field="doc.payment_mode_id.name"/>
                </p>
                <p>
                  <span t-esc="doc.note"/></p>
                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                  <strong>Fiscal Position Remark:</strong>
                  <span t-field="doc.fiscal_position_id.note"/>
                </p>
              </t>
              <t t-if="doc.report_type == 'refill'">
                <t t-foreach="doc.order_lines_layout()" t-as="page">
                  <t t-foreach="page" t-as="layout_category">
                    <t t-if="layout_category['print_grouped']">
                      <p id="limit_date" t-if="doc.limit_date">
                        <strong>Limit Date:</strong>
                        <span t-field="doc.limit_date"/>
                      </p>
                    </t>
                  </t>
                </t>
                <p id="payment_term_id" t-if="doc.payment_term_id">
                  <strong>Payment Term:</strong>
                  <span t-field="doc.payment_term_id.name"/>
                </p>
                <p id="incoterm" t-if="doc.incoterm">
                  <strong>Incoterm:</strong>
                  <span t-field="doc.incoterm"/>
                </p>
                <p id="invoicing_method_id" t-if="doc.invoicing_method_id">
                  <strong>Invoicing Method:</strong>
                  <span t-field="doc.invoicing_method_id.name"/>
                </p>
                <p id="payment_mode_id" t-if="doc.payment_mode_id">
                  <strong>Payment Mode:</strong>
                  <span t-field="doc.payment_mode_id.name"/>
                </p>
                <p>Comment:
                  <span t-esc="doc.note"/></p>
                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                  <strong>Fiscal Position Remark:</strong>
                  <span t-field="doc.fiscal_position_id.note"/>
                </p>
              </t>
              <t t-if="doc.report_type == 'represented'">
                <p id="limit_date" t-if="doc.limit_date">
                  <strong>Limit Date:</strong>
                  <span t-field="doc.limit_date"/>
                </p>
                <p id="payment_term_id" t-if="doc.payment_term_id">
                  <strong>Payment Term:</strong>
                  <span t-field="doc.payment_term_id.name"/>
                </p>
                <p id="incoterm" t-if="doc.incoterm">
                  <strong>Incoterm:</strong>
                  <span t-field="doc.incoterm"/>
                </p>
                <p id="invoicing_method_id" t-if="doc.invoicing_method_id">
                  <strong>Invoicing Method:</strong>
                  <span t-field="doc.invoicing_method_id.name"/>
                </p>
                <p id="payment_mode_id" t-if="doc.payment_mode_id">
                  <strong>Payment Mode:</strong>
                  <span t-field="doc.payment_mode_id.name"/>
                </p>
                <p>Comment:
                  <span t-esc="doc.note"/></p>
                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                  <strong>Fiscal Position Remark:</strong>
                  <span t-field="doc.fiscal_position_id.note"/>
                </p>
              </t>
            </div>
          </div>
          <div class="oe_structure"></div>
        </div>
      </div>
    </t>
  </template>

  <template id="report_saleorder_default" inherit_id="sale_layout_print_grouped.report_saleorder_layout_grouped">
    <t t-call="report.html_container" position="replace">
      <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="sale_order_report_dta.report_saleorder_document" t-lang="doc.partner_id.lang"/>
        </t>
      </t>
    </t>
  </template>

</odoo>
