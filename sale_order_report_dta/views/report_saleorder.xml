                <span style="margin-left:140px;" t-field="doc.date_order" t-field-options='{"format": "dd/mm/yyyy"}'/>
              </t>
              <t t-if="doc.state in ['draft','sent']">
                <span style="margin-left:88px;" t-field="doc.date_order" t-field-options='{"format": "dd/mm/yyyy"}'/>
              </t>
            </div>
            <div t-if="doc.validity_date">
              <span>Validity Date:</span>
              <span style="margin-left:110px;" t-field="doc.validity_date"/>
            </div>
            <div t-if="doc.client_order_ref">
              <span>Customer inquiry:</span>
              <p t-field="doc.client_order_ref"/>
            </div>
            <div t-if="doc.user_id.name">
              <span>Contact:</span>
              <span style="margin-left:172px;" t-field="doc.user_id"/><br/>
              <span>Email | Tel</span>
              <span style="margin-left:164px;">
                <span t-field="doc.user_id.login"/>
                |
                <span t-field="doc.user_id.phone"/>
              </span>
            </div>
          </div>
          <div class="col-xs-5 col-xs-offset-1">
            <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
            <span t-field="doc.partner_id.vat"/><br/>
            <span>tel:</span>
            <span style="margin-left: 100px;" t-field="doc.partner_id.phone"/><br/>
            <span>Client Code:</span>
            <span style="margin-left: 50px;" t-field="doc.partner_id.ref"/><br/>
            <span>Att:</span>
            <span style="margin-left: 100px;" t-field="doc.partner_id.vat"/>
          </div>
        </div>

        <!-- Is there a discount on at least one line? -->
        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
        <!-- <t t-set="display_taxes" t-value="any([a.tax_id for a in doc.order_line])"/> -->
        <t t-foreach="doc.order_lines_layout()" t-as="page">
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Position</th>
                <th>Description</th>
                <th class="text-right">Quantity</th>
                <th class="text-right">Unit Price</th>
                <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                <th class="text-right" groups="sale.group_show_tax_id">Taxes</th>
                <!-- <th class="text-right" groups="sale.group_show_price_subtotal">Price Total</th> -->
                <th class="text-right">Total Price</th>
              </tr>
            </thead>
            <tbody class="sale_tbody">
              <t t-foreach="page" t-as="layout_category">
                <t t-set="category" t-value="layout_category['category']"/>
                <t groups="sale.group_sale_layout">
                  <tr class="active">
                    <td style="font-weight: bold; border-bottom: 1px solid black;">
                      <t t-esc="position" t-value="line.position for line in doc.order_line"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;">
                      <t t-esc="layout_category['product_id'].default_code"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;">
                      <t t-esc="layout_category['name']"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                      <t t-if="layout_category['print_grouped']" t-esc="category.qty"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                      <t t-set="price" t-value="category.qty and (sum(a.price_subtotal for line in layout_category['lines'] for a in line) / category.qty) or 0"/>
                      <span t-if="layout_category['print_grouped']" t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                    </td>
                    <td t-if="display_discount" style="font-weight: bold; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"></td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                      <span t-if="layout_category['print_grouped']" t-esc="', '.join(map(lambda x: (x.description or x.name), layout_category['tax_id']))"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_subtotal">
                      <t t-set="price" t-value="sum(a.price_subtotal for line in layout_category['lines'] for a in line)"/>
                      <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right">
                      <t t-esc="doc.limit_date"/>
                    </td>
                    <td style="font-weight: bold; border-bottom: 1px solid black;" class="text-right" groups="sale.group_show_price_total">
                      <t t-set="price" t-value="sum(a.price_total for line in layout_category['lines'] for a in line)"/>
                      <span t-esc="price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                    </td>

                  </tr>
                  <tr>
                    <td colspan="6">
                      <span t-field="category.description"/>
                    </td>
                  </tr>
                </t>

                <!-- Lines associated -->
                <t t-if="not layout_category['print_grouped']">
                  <t t-foreach="layout_category['lines']" t-as="l">
                    <tr>
                      <td><span t-field="l.position"/></td>
                      <td><span t-field="l.name"/></td>
                      <td class="text-right">
                        <span t-field="l.product_uom_qty"/>
                        <span t-field="l.product_uom" groups="product.group_uom"/>
                      </td>
                      <td class="text-right">
                        <span t-field="l.price_unit"/>
                      </td>
                      <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                        <span t-field="l.discount"/>
                      </td>
                      <!-- <td class="text-right" t-if="l.tax_id">
                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                      </td> -->
                      <td class="text-right" groups="sale.group_show_price_subtotal" t-if="l.price_subtotal">
                        <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                      </td>
                      <td class="text-right" groups="sale.group_show_price_total">
                        <span t-field="l.price_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                      </td>
                    </tr>
                  </t>
                </t>

              </t>
            </tbody>
          </table>

          <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
            <p style="page-break-before:always;"></p>
          </t>
        </t>

        <div class="row" name="total">
          <div class="col-xs-4 pull-right">
            <table class="table table-condensed">
              <tr class="border-black">
                <td>
                  <strong>Total Without Taxes</strong>
                </td>
                <td class="text-right">
                  <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                </td>
              </tr>
              <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                <tr>
                  <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                  <td class="text-right">
                    <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                  </td>
                </tr>
              </t>
              <tr class="border-black">
                <td>
                  <strong>Total</strong>
                </td>
                <td class="text-right">
                  <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                </td>
              </tr>
            </table>
          </div>
        </div>
        <p id="limit_date" t-if="doc.limit_date">
          <strong>Limit Date:</strong>
          <span t-field="doc.limit_date"/>
        </p>
        <p id="payment_term_id" t-if="doc.payment_term_id">
          <strong>Payment Term:</strong>
          <span t-field="doc.payment_term_id.name"/>
        </p>
        <p id="incoterm" t-if="doc.incoterm">
          <strong>Incoterm:</strong>
          <span t-field="doc.incoterm"/>
        </p>
        <p id="invoicing_method_id" t-if="doc.invoicing_method_id">
          <strong>Invoicing Method:</strong>
          <span t-field="doc.invoicing_method_id.name"/>
        </p>
        <p id="payment_mode_id" t-if="doc.payment_mode_id">
          <strong>Payment Mode:</strong>
          <span t-field="doc.payment_mode_id.name"/>
        </p>
        <p>Comment:
          <span t-esc="doc.note"/></p>
        <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
          <strong>Fiscal Position Remark:</strong>
          <span t-field="doc.fiscal_position_id.note"/>
        </p>
        <div class="oe_structure"/>
      </div>
    </t>
  </template>

  <template id="report_saleorder_default" inherit_id="sale_layout_print_grouped.report_saleorder_layout_grouped">
    <t t-call="report.html_container" position="replace">
      <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="sale_order_report_dta.report_saleorder_document" t-lang="doc.partner_id.lang" t-if="doc.report_type == 'vehicle'"/>
          <t t-call="sale_order_report_dta.report_saleorder_document_1" t-lang="doc.partner_id.lang" t-if="doc.report_type == 'refill'"/>
          <t t-call="sale_order_report_dta.report_saleorder_document_2" t-lang="doc.partner_id.lang" t-if="doc.report_type == 'represented'"/>
        </t>
      </t>
    </t>
  </template>

</odoo>
