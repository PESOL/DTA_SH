<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_task_form" model="ir.ui.view">
        <field name="name">view.account.invoice.task.form</field>
        <field name="model">account.invoice</field>
        <field name='inherit_id' ref='account.invoice_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="task_id"/>
            </xpath>
            <xpath expr="//field[@name='task_id']" position="after">
                <field name="task_done"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_invoice_task_search" model="ir.ui.view">
        <field name="name">view.account.invoice.task.search</field>
        <field name="model">account.invoice</field>
        <field name='inherit_id' ref='account.view_account_invoice_filter'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="task_id"/>
                <filter name="Task" string="Task Done Not Invoiced" domain="[('state','in',['draft','proforma','proforma2']), ('task_id.stage_id.closed', '=', True)]"/>
                <filter name="PendingTask" string="Pending Task to Invoice" domain="[('state','in',['draft','proforma','proforma2']), ('task_id.stage_id.closed', '!=', True), ('date_invoice','&lt;', datetime.datetime.now()) ]"/>
            </xpath>
        </field>
    </record>
</odoo>
