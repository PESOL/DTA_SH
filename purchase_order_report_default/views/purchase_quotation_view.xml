<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_product_supplier_code_form" model="ir.ui.view">
        <field name="name">view.product.product.supplier_code.form</field>
        <field name="model">product.product</field>
        <field name='inherit_id' ref='product.product_normal_form_view'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
              <field name="supplier_code"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="position" />
            </xpath>
        </field>
    </record>
        <record id="view_purchase_quotation_form" model="ir.ui.view">
            <field name="name">view.purchase.quotation.form</field>
            <field name="model">purchase.order</field>
            <field name='inherit_id' ref='purchase.purchase_order_form'/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="supplier_deadline" />
                </xpath>
            </field>
        </record>
</odoo>
