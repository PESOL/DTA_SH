<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchasequotation_default_document">
    <t t-call="base_layout_report_dta.external_layout">
      <t t-set="doc" t-value="o.with_context({'lang':o.partner_id.lang})"/>
      <div class="page">
        <div class="oe_structure"></div>
        <div class="row">
          <div class="col-xs-12">
            <style>
              .table tr td,
              .table.no-border tr th {
                border: none !important;
              }

            </style>
            <table class="table table-condensed no-border">
              <tbody>
                <tr>
                  <td>
                    <span t-field="doc.partner_id.name" ></span>
                    <!-- <span t-if="doc.state not in ['draft','sent']">Order #
                            </span>
                            <span t-if="doc.state in ['draft','sent']">Quotation #
                            </span>
                            <span t-field="doc.name"/> -->
                  </td>
                  <td></td>
                  <td>
                    <span>DTA</span>
                  </td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span t-field="doc.partner_id.vat"/>
                  </td>
                  <td></td>
                  <td>
                    <span>Contact:</span>
                  </td>
                  <td>
                    <span t-esc="user.name"/>
                  </td>
                </tr>
                <tr>
                  <td>
                    <span>Street:</span>
                  </td>
                  <td>
                    <span t-field="doc.partner_id.street"/>
                  </td>
                  <td>
                    <span>Email | Tel:</span>
                  </td>
                  <td>
                    <span>
                      <span t-field="user.login"/>
                      |
                      <span t-field="user.phone"/>
                    </span>
                  </td>
                </tr>
                <tr>
                  <td>
                    <span>Address:</span>
                  </td>
                  <td>
                    <span t-field="doc.partner_id.zip"/>,
                    <span t-field="doc.partner_id.city"/>,
                    <span t-field="doc.partner_id.country_id"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span>tel:</span>
                  </td>
                  <td>
                    <span t-field="doc.partner_id.phone"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span>Client Code:</span>
                  </td>
                  <td>
                    <span t-field="doc.partner_id.ref"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span>Att:</span>
                  </td>
                  <td>
                    <span t-field="doc.partner_id.ref"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span t-if="doc.state != 'draft'">Purchase Order Confirmation #</span>
                    <span t-if="doc.state == 'draft'">Request for Quotation #</span>
                  </td>
                  <td>
                    <span t-field="doc.name"/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
                <tr>
                  <td>
                    <span>Date Ordered:</span>
                  </td>
                  <td>
                    <span t-if="doc.date_order" t-field="doc.date_order" t-field-options='{"format": "dd/mm/yyyy"}'/>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>

          <table class="table table-condensed">
            <thead>
              <tr>
                <th>
                  <strong>Pos.</strong>
                </th>
                <th>
                  <strong>PROJECT</strong>
                </th>
                <th class="text-right">
                  <strong>Qty</strong>
                </th>
                <th>
                  <strong>Ref. DTA</strong>
                </th>
                <th>
                  <strong>Description</strong>
                </th>
                <th>
                  <strong>Ref. Supplier</strong>
                </th>
                <th>
                  <strong>Needed date DTA</strong>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="o.order_line" t-as="order_line">
                <td>
                  <span t-field="order_line.sequence"/>
                </td>
                <td>
                  <span t-field="order_line.account_analytic_id and order_line.account_analytic_id.name"/>
                </td>
                <td class="text-right">
                  <span t-field="order_line.product_qty"/>
                  <span t-field="order_line.product_uom" groups="product.group_uom"/>
                </td>
                <td>
                  <span t-field="order_line.product_id.default_code"/>
                </td>
                <td>
                  <span t-field="order_line.name"/>
                </td>
                <td>
                  <span t-field="order_line.product_id.supplier_code"/>
                </td>
                <td class="text-center">
                  <span t-field="order_line.needed_dta_date"/>
                </td>
              </tr>
            </tbody>
          </table>

          <p t-field="o.notes"/>

          <div class="oe_structure"/>
        </div>
      </div>
    </t>
  </template>

  <template id="report_purchasequotation_default" inherit_id="purchase.report_purchasequotation">
    <xpath expr="t[@t-call='report.html_container']" position="replace">
      <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="purchase_order_report_default.report_purchasequotation_default_document" t-lang="o.partner_id.lang"/>
        </t>
      </t>
    </xpath>
  </template>
</odoo>
