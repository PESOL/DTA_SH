<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_landscape" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <template id="proposal_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-xs-4">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 100px;"/>
                    </div>
                    <div class="col-xs-4 col-xs-offset-4 text-right">
                        <img t-if="o.partner_id.image" t-att-src="'data:image/png;base64,%s' % o.partner_id.image" style="max-height: 100px;"/>
                    </div>
                </div>
            </div>
            <t t-raw="0"/>
            <div class="footer">
                <div class="row" style="border-top: 3px solid; border-top-color: #112236; padding-top: 5">
                    <div class="col-xs-1">
                        <img src="/crm_lead_proposal/static/src/img/odoo-p.png" style="max-height: 50px; padding: 5"/>
                    </div>
                    <div class="col-xs-1">
                        <img src="/crm_lead_proposal/static/src/img/odoo-c.png" style="max-height: 50px; padding: 5"/>
                    </div>
                    <div class="col-xs-1">
                        <img src="/crm_lead_proposal/static/src/img/oca-m.png" style="max-height: 50px; padding: 5"/>
                    </div>
                    <div class="col-xs-1">
                        <img src="/crm_lead_proposal/static/src/img/oca-c.png" style="max-height: 50px; padding: 5"/>
                    </div>
                    <div class="col-xs-4 col-xs-offset-4 text-right">
                        <h4><span class="page"/>/<span class="topage"/></h4>
                    </div>

                </div>
            </div>
        </template>
        <template id="report_crm_lead_proposal_document">
            <t t-call="crm_lead_proposal.proposal_layout">
                <div class="page">
                    <div class="row">
                        <span t-field="o.description"/>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_crm_lead_proposal_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-foreach="doc.proposal_section_ids" t-as="section">
                        <t t-foreach="section.crm_proposal_page_ids" t-as="o">
                            <t t-call="crm_lead_proposal.report_crm_lead_proposal_document"/>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <report id="report_crm_lead_proposal_report" model="crm.lead.proposal" string="Proposal" report_type="qweb-pdf" name="crm_lead_proposal.report_crm_lead_proposal_template" file="crm_lead_proposal.report_crm_lead_proposal_template"/>
        <record id="report_crm_lead_proposal_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="crm_lead_proposal.paperformat_landscape"/>
        </record>
    </data>
</odoo>
