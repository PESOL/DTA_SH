<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_requirement_set_ok" model="ir.ui.view">
        <field name="name">Validate Requirements</field>
        <field name="model">purchase.requirement.set.ok</field>
        <field name="arch" type="xml">
            <form string="Validate Requirements">
                <p class="oe_grey">
                    Are you sure you want to validate this requirements?
                </p>
                <field name="requirement_ids"/>
                <footer>
                    <button string="OK" name="set_reviewd" type="object" context="{}" class="btn btn-primary btn-sm o_list_button_add"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_purchase_requirement_set_ok" model="ir.actions.act_window">
        <field name="name">Validate Requirements</field>
        <field name="res_model">purchase.requirement.set.ok</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="purchase_requirement_set_ok_button_action">
        <field name="model_id" ref="purchase_requirement.model_purchase_requirement"/>
        <field name="name">Validate Requirements</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' + str(ref('action_view_purchase_requirement_set_ok'))"/>
        <field name="key">action</field>
        <field name="model">purchase.requirement</field>
    </record>

    <record id="view_purchase_requirement_wizard" model="ir.ui.view">
        <field name="name">Generate Purchase Orders</field>
        <field name="model">purchase.requirement.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Purchase Orders">
                <p class="oe_grey">
                    Are you sure you want to generate purchase orders for the selected requirements?
                </p>
                <field name="requirement_ids"/>
                <footer>
                    <button string="OK" name="generate_purchases" type="object" context="{}" class="btn btn-primary btn-sm o_list_button_add"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_purchase_requirement" model="ir.actions.act_window">
        <field name="name">Generate Purchase Orders</field>
        <field name="res_model">purchase.requirement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.values" id="purchase_requirement_button_action">
        <field name="model_id" ref="purchase_requirement.model_purchase_requirement"/>
        <field name="name">Generate Purchase Orders</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' + str(ref('action_view_purchase_requirement'))"/>
        <field name="key">action</field>
        <field name="model">purchase.requirement</field>
    </record>

</odoo>
