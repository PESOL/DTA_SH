<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_requirement_form" model="ir.ui.view">
        <field name="name">view.purchase.requirement.form</field>
        <field name="model">purchase.requirement</field>
        <field name="arch" type="xml">
            <form string="Purchase Requirement">
                <header>
                    <button string="Validate" name="set_reviewd" type="object" states="pending"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,reviwed,in_process"/>
                </header>

                <sheet>
                    <group name="main">
                        <field name="product_id" domain="[('purchase_ok', '=', True)]"/>
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="product_qty"/>
                        <field name="required_date"/>
                        <field name="expected_date" />
                    </group>
                    <group string="Suppliers">
                        <field name="supplier_ids" nolabel="1" context="{'search_default_supplier': 1}"/>
                    </group>
                    <group string="Purchase Order Lines" attrs="{'invisible':[('state','in', ['pending','reviwed'])]}">
                        <field name="purchase_order_line_ids" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_purchase_requirement_tree" model="ir.ui.view">
        <field name="name">view.purchase.requirement.tree</field>
        <field name="model">purchase.requirement</field>
        <field name="arch" type="xml">
            <tree string="Purchase Requirement">
                <field name="name"/>
                <field name="ref"/>
                <field name="product_id"/>
                <field name="product_qty"/>
                <field name="required_date"/>
                <field name="expected_date" />
                <field name="supplier_ids"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_purchase_requirement_search" model="ir.ui.view">
        <field name="name">view.purchase.requirement.search</field>
        <field name="model">purchase.requirement</field>
        <field name="arch" type="xml">
            <search string="Purchase Requirement">
                <field name="name"/>
                <field name="ref"/>
                <field name="product_id"/>
                <group string="Group By" expand="0">
                    <filter string="Name" context="{'group_by': 'name'}"/>
                    <filter string="Ref" context="{'group_by': 'ref'}"/>
                    <filter string="Product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="purchase_requirement_action" model="ir.actions.act_window">
        <field name="name">Purchase Requirement</field>
        <field name="res_model">purchase.requirement</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Purchase Requirement.
            </p>
        </field>
    </record>

    <record id="act_purchase_requirement_kanban_view" model="ir.actions.act_window">
        <field name="name">Purchase Requirement</field>
        <field name="res_model">purchase.requirement</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_purchase_requirement_tree"/>
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="context">{"default_project_id": active_id, "search_default_project_id": [active_id]}</field>
        <field name="search_view_id" ref="view_purchase_requirement_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Purchase Requirement.
            </p>
        </field>
    </record>

    <menuitem id="purchase_requirement_menu" parent="purchase.menu_procurement_management" action="purchase_requirement_action" sequence="20" name="Purchase Requirements"/>
</odoo>
