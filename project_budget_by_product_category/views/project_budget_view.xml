<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_budget_product_category_form" model="ir.ui.view">
        <field name="name">view.project.budget.product.category.form</field>
        <field name="model">project.project</field>
        <field name='inherit_id' ref='project.edit_project'/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page" position="after">
                <page string="Project Budget">
                    <field name="budget_ids">
                        <tree>
                            <field name="project_id"/>
                            <field name="product_category_id"/>
                            <field name="budget"/>
                            <field name="amount"/>
                            <field name="percent" widget="progressbar" modifiers="{'readonly': true}"/>
                        </tree>
                        <form>
                            <group>
                                <field name="project_id"/>
                                <field name="product_category_id"/>
                            </group>
                            <group>
                                <field name="budget"/>
                                <field name="amount"/>
                                <field name="percent" widget="progressbar" modifiers="{'readonly': true}"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_project_budget_tree" model="ir.ui.view">
        <field name="name">view.project.budget.tree</field>
        <field name="model">project.budget</field>
        <field name="arch" type="xml">
            <tree string="label">
                <field name="project_id"/>
                <field name="product_category_id"/>
                <field name="budget"/>
                <field name="amount"/>
                <field name="percent"/>
            </tree>
        </field>
    </record>

    <record id="view_project_budget_search" model="ir.ui.view">
        <field name="name">view.project.budget.search</field>
        <field name="model">project.budget</field>
        <field name="arch" type="xml">
            <search string="Project Budget">
                <field name="project_id"/>
                <field name="product_category_id"/>
                <field name="budget"/>
                <field name="amount"/>
                <field name="percent"/>
                <group string="Group By" expand="0">
                    <filter string="Project" context="{'group_by': 'project_id'}"/>
                    <filter string="Product Category" context="{'group_by': 'product_category_id'}"/>
                    <filter string="Budget" context="{'group_by': 'budget'}"/>
                    <filter string="Amount" context="{'group_by': 'Amount'}"/>
                    <filter string="Percent" context="{'group_by': 'percent'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="act_project_budget_kanban_view" model="ir.actions.act_window">
        <field name="name">Project Budget</field>
        <field name="res_model">project.budget</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_budget_tree"/>
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="context">{"default_project_id": active_id, "search_default_project_id": [active_id]}</field>
        <field name="search_view_id" ref="view_project_budget_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Project Budget.
            </p>
        </field>
    </record>

    <record id="view_project_budget_kanban_inherited" model="ir.ui.view">
        <field name="name">view.project.budget.kanban.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'o_kanban_manage_reports')]/div[last()]" position="after">
                <div>
                    <a name="%(act_project_budget_kanban_view)d" type="action">Project Budget</a>
                </div>
            </xpath>
            <xpath expr="//div[contains(@class, 'o_project_kanban_box')]/div[last()]" position="before">
                <div class="o_project_kanban_box">
                    <a name="%(act_project_budget_kanban_view)d" type="action">
                        <span class="o_label">Project Budget</span>
                    </a>
                </div>
            </xpath>
        </field>
    </record>

    <act_window
        id="project_budget_action_view_project"
        name="Project Budget"
        src_model="project.project"
        res_model="project.budget"
        view_mode="tree"
        view_id="view_project_budget_tree"
        context="{
                'search_default_project_id': [active_id],
                'default_project_id': active_id,
            }"/>

    <record id="view_project_budget_product_template_add_check_form" model="ir.ui.view">
        <field name="name">view.project.budget.product.template.add.check.form</field>
        <field name="model">product.template</field>
        <field name='inherit_id' ref='product.product_template_only_form_view'/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='general_information']/group/group/field[@name='categ_id']" position="after">
                <field name="project_budget"/>
            </xpath>
        </field>
    </record>
</odoo>
