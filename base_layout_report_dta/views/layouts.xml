<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="dx_report_layout" inherit_id="report.external_layout">
		<xpath expr="t[@t-call='report.external_layout_header']" position="replace">
			<t t-call="base_layout_report_dta.external_layout_header"/>
		</xpath>
		<xpath expr="t[@t-call='report.external_layout_footer']" position="replace">
			<t t-call="base_layout_report_dta.external_layout_footer"/>
		</xpath>
	</template>

	<template id="external_layout_header">
		<div class="header">
			<div class="row">
				<div class="col-xs-4">
					<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 100px;"/>
				</div>
				<div class="col-xs-8">
					<!--div style="position: absolute; bottom: 50px"-->
						<p>DESARROLLO DE TÉCNICAS PARA ASTILLEROS, S.A. C/ Límite s/n, Pol. Ind. Las Fronteras<br/>
						28850 Torrejón de Ardoz, Madrid, ESPAÑA. Tel. +34 91307 60 63 dta@dta.es CIF A-28290856</p>
					<!--/div-->
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<div style="border-bottom: 1px solid black;"></div>
				</div>
			</div>
		</div>
	</template>

	<template id="external_layout_footer">
		<div class="footer">
			<div class="text-center" style="border-top: 1px solid black;">
				<ul t-if="not company.custom_footer" class="list-inline">
					<li>www.dta.es</li>
				</ul>


				<ul class="list-inline">
					<li><span class="page"/></li>
					<li>/</li>
					<li><span class="topage"/></li>
				</ul>
			</div>
		</div>
	</template>

</odoo>
