<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="external_layout">
		<!-- Multicompany -->
		<t t-if="not o and doc">
			<t t-set="o" t-value="doc"/>
		</t>
		<t t-if="o and 'company_id' in o">
			<t t-set="company" t-value="o.company_id"></t>
		</t>
		<t t-if="not o or not 'company_id' in o">
			<t t-set="company" t-value="res_company"></t>
		</t>

		<t t-call="base_layout_report_dta.dta_external_layout_header"/>
		<t t-raw="0"/>
		<t t-call="base_layout_report_dta.dta_external_layout_footer"/>
	</template>

	<template id="dta_external_layout_header">
		<div class="header">
			<div class="row">
				<div class="col-xs-4">
					<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 100px;"/>
				</div>
				<div class="col-xs-8" style="display:table-cell; vertical-align:middle; margin-top:30px;">
					<!--div style="position: absolute; bottom: 50px"-->
					<p style="font-size:11px; ">DESARROLLO DE TÉCNICAS PARA ASTILLEROS, S.A. C/ Límite s/n, Pol. Ind. Las Fronteras<br/>
						28850 Torrejón de Ardoz, Madrid, ESPAÑA. Tel. +34 91307 60 63 dta@dta.es CIF A-28290856</p>
					<!--/div-->
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<div style="border-bottom: 1px solid black;"></div>
				</div>
			</div>
		</div>
	</template>

	<template id="dta_external_layout_footer">
		<div class="footer">
			<div class="text-center" style="border-top: 1px solid black;">
				<ul t-if="not company.custom_footer" class="list-inline">
					<li>www.dta.es</li>
				</ul>

				<ul class="list-inline" style="text-align:right;">
					<li><span class="page"/></li>
					<li>/</li>
					<li><span class="topage"/></li>
				</ul>
			</div>
		</div>
	</template>

</odoo>
