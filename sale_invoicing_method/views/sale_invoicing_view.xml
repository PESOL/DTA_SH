<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_invoicing_method_form" model="ir.ui.view">
        <field name="name">view.sale.invoicing.method.category.form</field>
        <field name="model">sale.order</field>
        <field name='inherit_id' ref='sale.view_order_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='confirmation_date']" position="after">
                <field name="invoicing_method_id"/>
            </xpath>
        </field>
    </record>
</odoo>
