<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_analytic_product_category_form" model="ir.ui.view">
        <field name="name">view.analytic.product.category.form</field>
        <field name="model">account.analytic.line</field>
        <field name='inherit_id' ref='account.view_account_analytic_line_form_inherit_account'/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='product_id']" position="after">
              <field name="product_category_id"/>
          </xpath>
        </field>
    </record>
    <record id="view_analytic_product_category_search" model="ir.ui.view">
        <field name="name">view.analytic.product.category.search</field>
        <field name="model">account.analytic.line</field>
        <field name='inherit_id' ref='account.view_account_analytic_line_filter_inherit_account'/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='product_id']" position="after">
              <field name="product_category_id"/>
          </xpath>
          <xpath expr="//group[@name='groupby']" position="after">
              <filter string="Product Category" context="{'group_by':'product_category_id'}"/>
          </xpath>
        </field>
    </record>
</odoo>
